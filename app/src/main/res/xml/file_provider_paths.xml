<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- External files directory for scanned documents -->
    <external-files-path
        name="documents"
        path="SimplyScannerPro/" />
    
    <!-- Temporary files for processing -->
    <external-files-path
        name="temp"
        path="SimplyScannerPro/temp/" />
    
    <!-- Backup files -->
    <external-files-path
        name="backup"
        path="SimplyScannerPro/backup/" />
    
    <!-- Cache directory for gallery imports -->
    <cache-path
        name="gallery_imports"
        path="gallery_imports/" />
    
    <!-- Cache directory for image processing -->
    <cache-path
        name="processing"
        path="processing/" />
</paths>